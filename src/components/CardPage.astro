---
import Image from '../components/Image.astro';


interface Props {
	title: string;
	desc: string;
	category: string;
	url: string;
	thumb?: any
}

const { title, desc, category, url, thumb } = Astro.props;
---

<article class="card-page">
	{thumb && <Image node={thumb} />}
	<p class="u-eyebrow">{category}</p>
	<h2>{title}</h2>
	<p>{desc}</p>
	<a href={url}>View case study</a>
</article>

<style>
	.card-page {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;

		h2 {
			font-weight: 400;
			font-size: 1.25rem;
			line-height: 1.3;
		}

		img {
			width: 100%;
			aspect-ratio: 1 / 1;
			object-fit: cover;
			margin-block-end: 0.5rem;
		}

		a {
			font-size: 0.75rem;
		}
	}
</style>
